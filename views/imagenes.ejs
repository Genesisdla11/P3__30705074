</style>
<body>
    <header>
        <nav>
            <h3>Imagenes</h3><br> 
            <a href="/home">Home</a>
            <a href="/categorias">Categorias</a>
            <a href="/productos">Productos</a>
            <a href="/imagenes">Imagenes</a>
        </nav>
</head><br>

<body>
  <table>
    <thead>
        <tr>
          <th>NÂ°</th>
          <th>Imagen</th>
          <th>Destacado</th>
          <td><a href="/imgagg" class="btn">Agregar</a></td>
        </tr>
    </thead>
      <tbody>
            <tr>
                <% if (imagenes) { %>
                    <% for (let i = 0; i < imagenes.length; i++){  %>
                        <% if (imagenes) { %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><img src="<%= imagenes[i].url %>" width="200px" height="200px"></td>
                                <td><%= imagenes[i].destacado %></td>
                                <td> 
                                    <div class="input-group">
                                        <a href="/imgdelete/<%= imagenes[i].id%>" class="btn btn-outline-primary">Eliminar</a>
                                        <a href="/imgedit/<%= imagenes[i].id%>" class="btn btn-outline-success">Actualizar</a>
                                    </div>
                                </td>
                            </tr>    
                        <% } %>
                    <% } %>
                <% } else { %>
                        <tr>
                            <th>No hay imagenes en el sistema</th>
                        </tr>
                    <% }   %>
            </tr>
        </table>
        </tr>
      </tr>
    </tbody>
  </table>
</body>
</html>
