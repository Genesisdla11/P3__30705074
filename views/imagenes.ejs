    th {
      background-color: #eee;
    }

    .botones {
      text-align: center;
    }

    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 5px;
    }

    th {
      background-color: #eee;
    }

    .input-group{
      width:50%; left: 40px;;
      text-align:center;
      margin:auto;
    }

    td a{
      border: 1px solid #ccc;
